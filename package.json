{
  "name": "shumoku",
  "version": "0.0.0",
  "private": true,
  "description": "Modern network topology visualization library for Markdown",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konoe-akitoshi/shumoku.git"
  },
  "author": "konoe-akitoshi",
  "homepage": "https://shumoku.packof.me/",
  "bugs": {
    "url": "https://github.com/konoe-akitoshi/shumoku/issues"
  },
  "license": "MIT",
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "packages/**",
    "apps/*",
    "apps/server/api",
    "apps/server/web"
  ],
  "scripts": {
    "dev": "turbo run dev --concurrency 11 --filter=!@shumoku/server-api --filter=!@shumoku/server-web",
    "dev:server": "turbo run dev --filter=@shumoku/server",
    "dev:server:demo": "turbo run dev:demo --filter=@shumoku/server",
    "build": "turbo run build --filter='!@shumoku/server'",
    "build:all": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "typecheck": "turbo run typecheck",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter='./packages/**' && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.2.3",
    "turbo": "^2.8.7",
    "typescript": "^5.9.3"
  }
}
