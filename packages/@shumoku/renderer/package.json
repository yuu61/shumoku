{
  "name": "@shumoku/renderer",
  "version": "0.2.25",
  "description": "SVG and HTML renderers for Shumoku network diagrams",
  "license": "MIT",
  "author": "konoe-akitoshi",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konoe-akitoshi/shumoku.git",
    "directory": "packages/@shumoku/renderer"
  },
  "homepage": "https://shumoku.packof.me/",
  "bugs": {
    "url": "https://github.com/konoe-akitoshi/shumoku/issues"
  },
  "keywords": [
    "network",
    "topology",
    "diagram",
    "visualization",
    "svg",
    "renderer",
    "cli"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "shumoku": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "node": {
        "types": "./dist/index.node.d.ts",
        "import": "./dist/index.node.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    },
    "./style.css": "./dist/style.css",
    "./iife": "./dist/shumoku-interactive.iife.js",
    "./iife-string": {
      "types": "./dist/iife-string.d.ts",
      "import": "./dist/iife-string.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && bun run build:css && bun run build:iife && bun run build:iife-string",
    "build:css": "bun src/build-css.ts",
    "build:iife": "bun src/build-iife.ts",
    "build:iife-string": "bun src/build-iife-string.ts",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "@shumoku/core": "^0.2.23",
    "@shumoku/parser-yaml": "^0.2.15"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "jsdom": "^28.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  }
}
